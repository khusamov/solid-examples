{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"module": "commonjs",
		"target": "es6",
		"sourceMap": false,
		"removeComments": false,
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"pir-model-preparer": ["./index"]
		}
	},
	"exclude": [
		"node_modules",
		"temp",
		"dist"
	]
}